<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="100dp">
            <ImageView
                android:id="@+id/img_back"
                android:src="@drawable/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/guide_line_middle"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"/>
        <TextView
            android:text="Buscar"
            android:textColor="@color/colorWhite"
            android:textSize="28sp"
            android:id="@+id/txt_search_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_regular"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/guide_line_middle"
            app:layout_constraintStart_toEndOf="@+id/img_back"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/txt_subtitle_search"
            android:textColor="@color/colorWhite"
            android:text="Búsqueda de infracción"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/img_back"
            app:layout_constraintStart_toStartOf="@id/txt_search_header"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_line_middle"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>